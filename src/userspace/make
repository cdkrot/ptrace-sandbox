#!/usr/bin/make -f

# < Configuration >
CC=gcc -Wall -Wextra -Wshadow -Wimplicit -std=gnu11

# < Main targets >
all: bin/userspace/threading-splay-test bin/userspace/sandbox-nothing bin/userspace/sbslotid bin/userspace/sandbox-just-fork

help:
	@echo "Do not call this make directly"
	@echo "Use ./build in project root"

.PHONY: all help

# < Targets >

bin/userspace/%: src/userspace/%.c
	${CC} ${CFLAGS} $< -o $@


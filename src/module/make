#!/usr/bin/make -f

# < Configuration >
all: bin/module/sandboxer.ko

help:
	@echo "Do not call this make directly."
	@echo "Use ./build in project root"

clean:
	make -C ${PWD}/src/module clean
	rm -f bin/module/sandboxer.ko

.PHONY: all help clean
.DEFAULT: all

bin/module/sandboxer.ko: src/module/sandboxer.c
	make -C ${PWD}/src/module
	cp ./src/module/sandboxer.ko bin/module/

